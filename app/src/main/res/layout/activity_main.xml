<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <GridLayout
        android:id="@+id/menuArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/orderHistory">
        <Button
            android:id="@+id/menu_1"
            style="@style/button_style"
            android:layout_row="0"
            android:layout_column="0"/>
        <Button
            android:id="@+id/menu_2"
            style="@style/button_style"
            android:layout_row="0"
            android:layout_column="1"/>
        <Button
            android:id="@+id/menu_3"
            style="@style/button_style"
            android:layout_row="1"
            android:layout_column="0"/>
        <Button
            android:id="@+id/menu_4"
            style="@style/button_style"
            android:layout_row="1"
            android:layout_column="1"/>
        <Button
            android:id="@+id/menu_5"
            style="@style/button_style"
            android:layout_row="2"
            android:layout_column="0"/>
        <Button
            android:id="@+id/menu_6"
            style="@style/button_style"
            android:layout_row="2"
            android:layout_column="1"/>
        <Button
            android:id="@+id/menu_7"
            style="@style/button_style"
            android:layout_row="3"
            android:layout_column="0"/>
        <Button
            android:id="@+id/menu_8"
            style="@style/button_style"
            android:layout_row="3"
            android:layout_column="1"/>
    </GridLayout>
    <ListView
        android:id="@+id/orderHistory"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/menuArea"/>
    <ListView
        android:id="@+id/order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/menu_8"/>


</androidx.constraintlayout.widget.ConstraintLayout>